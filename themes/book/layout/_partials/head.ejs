<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

    <% if (theme.favicon_url) { %>
      <link rel="icon" href="<%- url_for(theme.favicon_url) %>" />
    <% } %>

    <title>
        <% if (page.title) { %>
          <%= page.title + ' - ' + config.title %>
        <% } else{%>
          <%= config.title %>
        <% } %>
